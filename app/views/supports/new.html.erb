<%= form_for [@user, @post, @support] do |f| %>
  <div style="margin: 8px 0">
    <%= f.label :message, 'メッセージ', style: { 'margin-right' => 8 } %>
    <%= f.text_field :message, placeholder: 'メッセージ', value: 1, max: 10, min: 1, html: { class: "search__query", style: 'text-align: right;' } %>
  </div>
  <div class="col10 push1">
    <%= button_tag type: "submit", class: "btn btn--block" do %>
    投稿する<i class="icon-arrow-right"></i>
    <% end %>
  </div>
<% end %>