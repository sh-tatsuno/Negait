<!DOCTYPE html>
<html>

<head>
  <title>Negait</title>
  <%= stylesheet_link_tag  'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<header>
<div class="container">
  <div class="headA">
  <%= link_to image_tag("logo.png", :size => "120x50", :alt => "アイコン"), root_path %>
  </div>
  <nav class="headB">
    <ul>
      <% if current_user.avatar_file_name.nil? %>
        <li><%= link_to image_tag("profile.png", :size => "35x35", :alt => "アイコン"), edit_user_path(current_user) %></li>
      <% else %>
        <li><%= link_to image_tag(current_user.avatar, :size => "35x35", :alt => "アイコン"), edit_user_path(current_user) %></li>
      <% end %>
      <li><%= link_to image_tag("upload.png", :size => "35x35", :alt => "アイコン"), new_user_post_path(current_user) %></li>
      <li><%= link_to image_tag("suzu.png", :size => "35x35", :alt => "アイコン"), user_path(current_user) %></li>
    </ul>
  </nav>
</div>
</header>

<%= yield %>


</body>
</html>
