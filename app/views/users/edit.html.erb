<%= form_for @user do |f| %>

<!-- e-mail, password, nickname, sex, company, intruduction, avatar の編集-->
  <div>
  ・ニックネーム<br>
  <%= f.text_field :nickname, placeholder: 'メッセージ', value: current_user.nickname %>
  </div>

  <div>
  ・性別<br>
  <%= gender_name(current_user.sex) %>
  </div>

  <div>
  ・所属会社<br>
  <%= company_name(current_user.company) %>
  </div>

  <div>
  ・自己紹介<br>
    <div style="margin: 8px 0">
      <%= f.text_area :introduction, placeholder: 'メッセージ', value: current_user.introduction%>
    </div>
  </div>

  <div>
  ・画像<br>
    <% if current_user.avatar_file_name.nil? %>
    <%= link_to image_tag("profile.png", :size => "300x300", :alt => "アイコン") %>
    <% else %>
    <%= link_to image_tag(current_user.avatar, :size => "300x300", :alt => "アイコン") %>
    <% end %>
    <div style="margin: 8px 0">
      <div class="field">
        <%= f.file_field :avatar  %>
      </div>
    </div>
  </div>

  <%= f.submit %>

  </div>
<% end %>