<div class="post-new">
  <%= form_for [@user, @post] do |f| %>
  <div style="margin: 8px 0">
    <%= f.label :title, 'タイトル', style: { 'margin-right' => 8 } %><br>
    <%= f.text_field :title, placeholder: 'タイトル', max: 10, min: 1, html: { class: "search__query", style: 'text-align: right;' } %>
  </div>
  <div class="field">
  <%= f.select :category,
    [["仲間募集","colleages"],
    ["勉強会開催","study"],
    ["物が欲しい/いらない","items"],
    ["相談に乗って欲しい","consultation"],
    ["紹介したい人がいる","introduction"],
    ["よもやま","free_talking"],
    ["その他","others"]
    ]
    %>
  </div>
  <div style="margin: 8px 0">
    <%= f.label :detail, '内容', style: { 'margin-right' => 8 } %><br>
    <%= f.text_area :detail, placeholder: 'お願い事の内容', style: 'width: 100%;height: 300px;' %>
  </div>
  <div class="row">
    <div class="push_button">
      <%= button_tag type: "submit", class: "button" do %>
      投稿する<i class="icon-arrow-right"></i>
      <% end %>
    </div>
  </div>
  <% end %>
</div>